# ==============================================================================
# InterviewAce — Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.
# ==============================================================================

# --- Project ---
PROJECT_NAME=Interview Ace
VERSION=2.0.0

# --- Security (REQUIRED — app will not start without these) ---
SECRET_KEY=CHANGE_ME_generate_a_64_char_random_string_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Database ---
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=interview_ace
# Full URL override (optional — constructed from above if not set):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/interview_ace

# --- CORS ---
# JSON array of allowed origins
ALLOWED_ORIGINS=["http://localhost:3000"]

# --- LLM — OpenAI (Primary) ---
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-5.2-2025-12-11

# --- LLM — Gemini (Fallback) ---
GEMINI_API_KEY=AIza-your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# --- SMTP Email ---
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# --- File Upload ---
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# --- Redis (for rate limiting, token blacklist, Celery broker) ---
REDIS_URL=redis://localhost:6379/0

# --- Sentry (error monitoring — leave empty to disable) ---
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# --- Environment (development | staging | production) ---
ENVIRONMENT=development
