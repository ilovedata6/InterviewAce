# ==============================================================================
# InterviewAce — Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control.
# ==============================================================================

# --- Project ---
PROJECT_NAME=Interview Ace
VERSION=2.0.0
ENVIRONMENT=development
# Set to "production" when deploying to Render/Vercel

# --- Security (REQUIRED — app will not start without these) ---
SECRET_KEY=CHANGE_ME_generate_a_64_char_random_string_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Database ---
# LOCAL DEVELOPMENT: use individual fields
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=interview_ace
# PRODUCTION (Neon): use full URL (overrides individual fields above)
# DATABASE_URL=postgresql://user:pass@ep-xxx.region.aws.neon.tech/interview_ace?sslmode=require

# --- CORS ---
# JSON array of allowed origins
# LOCAL:
ALLOWED_ORIGINS=["http://localhost:3000"]
# PRODUCTION (set to your Vercel URL):
# ALLOWED_ORIGINS=["https://your-app.vercel.app"]

# --- LLM — OpenAI (Primary) ---
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# --- LLM — Gemini (Fallback) ---
GEMINI_API_KEY=AIza-your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# --- SMTP Email ---
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_DEV_MODE=true
# Set EMAIL_DEV_MODE=false and configure SMTP for production

# --- File Upload ---
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# --- Redis (for rate limiting, token blacklist, Celery broker) ---
# LOCAL:
REDIS_URL=redis://localhost:6379/0
# PRODUCTION (Upstash): use the Redis URL from Upstash dashboard
# REDIS_URL=rediss://default:xxx@us1-xxx.upstash.io:6379

# --- Frontend URL (used for email verification links, share links) ---
FRONTEND_URL=http://localhost:3000
# PRODUCTION: set to your Vercel URL
# FRONTEND_URL=https://your-app.vercel.app

# --- Sentry (error monitoring — leave empty to disable) ---
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# --- Environment (development | staging | production) ---
ENVIRONMENT=development
